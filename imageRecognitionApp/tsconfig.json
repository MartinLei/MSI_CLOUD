{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
  
    "noImplicitAny" : true,
    "noImplicitThis" : true,
    "strictBindCallApply": true,
    
    "strictFunctionTypes" : true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "esModuleInterop" : true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/test"
  ]
}